{
    "compilerOptions": {
        "baseUrl": "./src",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "ES2023"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "outDir": "dist/",
        "paths": {
            "#constants": [
                "constants/index.js"
            ]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "target": "ES2023"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*",
        "../interfaces/src/type/TopicType.ts"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}