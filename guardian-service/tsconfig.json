{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2022",
        "lib": [
            "es5",
            "es6",
            "ES2021.String"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist/",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@entity/*": [
                "entity/*"
            ],
            "@api/*": [
                "api/*"
            ],
            "@subscribers/*": [
                "subscribers/*"
            ],
            "@helpers/*": [
                "helpers/*"
            ],
            "@policy-engine/*": [
                "policy-engine/*"
            ],
            "@auth/*": [
                "auth/*"
            ],
            "@hedera-modules": [
                "hedera-modules/index"
            ],
            "@database-modules": [
                "database-modules/index"
            ],
            "@document-loader/*": [
                "document-loader/*"
            ],
            "@analytics": [
                "analytics/index"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../interfaces/src/type/TopicType.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true
}