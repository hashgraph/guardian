{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "ES2023"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "outDir": "dist/",
        "paths": {
            "#constants/*": [
                "./src/constants/*"
            ]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "target": "ES2023"
    },
    "exclude": [
        "node_modules",
        "dist",
        "data",
        "faiss-vector"
    ],
    "include": [
        "src/**/*.ts"
    ]
}