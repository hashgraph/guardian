{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": false,
    "skipLibCheck": true,
    "lib": [
      "es5",
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/",
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
    "include": ["./src/**/*",  "./src/docs/swagger.yaml"]
}
