{
    "compilerOptions": {
        "baseUrl": "src",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "paths": {
            "#constants": [
                "constants/index.js"
            ]
        },
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "target": "ES2023"
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "include": [
        "./src/**/*",
        "./tests/**/*.ts"
    ]
}