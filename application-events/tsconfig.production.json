{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "module": "es2022",
    "experimentalDecorators": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*",
    "./tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
