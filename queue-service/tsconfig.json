{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2022",
        "lib": [
            "esnext"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist/",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {}
    },
    "include": [
        "src/**/*",
        "../interfaces/src/type/TopicType.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true,
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}
