{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "inlineSourceMap": false,
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist/",
    "paths": {
      "@api/*": [
        "api/*"
      ],
      "@entity/*": [
        "entity/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "#constants": [
        "constants/index.js"
      ],
      "#utils": [
        "utils/index.js"
      ]
    },
    "target": "es2022"
  },
  "exclude": [
    "node_modules",
    "public",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
