{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2022",
        "lib": [
            "dom",
            "es5",
            "es6",
            "ES2021.String"
        ],
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist/",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "declaration": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true
}
