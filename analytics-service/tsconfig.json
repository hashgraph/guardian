{
    "compilerOptions": {
        "baseUrl": "./src",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "ES2023"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist/",
        "paths": {
            "@api/*": [
                "api/*"
            ],
            "@entity/*": [
                "entity/*"
            ],
            "@helpers/*": [
                "helpers/*"
            ],
            "@interfaces/*": [
                "interfaces/*"
            ],
            "@middlewares/*": [
                "middlewares/*"
            ]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "target": "ES2023"
    },
    "exclude": [
        "node_modules",
        "public",
        "dist"
    ],
    "include": [
        "src/**/*"
    ]
}