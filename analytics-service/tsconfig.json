{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./src",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "skipLibCheck": true,
        "lib": [
            "es5",
            "es6"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist/",
        "paths": {
            "@api/*": [
                "api/*"
            ],
            "@entity/*": [
                "entity/*"
            ],
            "@helpers/*": [
                "helpers/*"
            ],
            "@interfaces/*": [
                "interfaces/*"
            ],
            "@middlewares/*": [
                "middlewares/*"
            ]
        },
        "target": "es2022"
    },
    "exclude": [
        "node_modules",
        "public",
        "dist"
    ],
    "include": [
        "src/**/*"
    ]
}
